FROM node:8.5
ENV API_ENDPOINT={{API_ENDPOINT}}
ENV BUNDLE_PATH={{BUNDLE_PATH}}
ENV BUNDLE_DIRECTORY={{BUNDLE_DIRECTORY}}
ENV PUBLIC_DIRECTORY={{PUBLIC_DIRECTORY}}
ENV HEADER_FRAGMENT_PATH={{HEADER_FRAGMENT_PATH}}
WORKDIR /app
COPY package.json /app
RUN npm install
COPY . /app
CMD node server.js
EXPOSE 3000
